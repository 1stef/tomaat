<div id="modalCategorieen" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalCenterTitle">Bewerk toernooi categorieÃ«n</h3>
                {# <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span> </button> #}
                <h4>Toernooi naam: <b>{{ toernooi_naam }}</b></h4>
            </div>
            <div class="modal-body">
                <div class="w3-row">
                    <p class="max-75 w3-col s8">

                    </p>
                </div>
                <div class="w3-row">
                    <div id="categorie_list" class="w3-col s12 mycontainer">
                        {% for cat in categorieen %}
                            <div class="w3-row">
                                <div class="w3-col s3 w3-border w3-border-blue w3-margin"><b>{{ cat.getCat() }}</b></div>
                                <div class="w3-col s3 w3-border w3-border-blue w3-margin"><b>{{ cat.getCatType() }}</b></div>
                                <button class="newbutton" title="Verwijder" data-cat = "{{ cat.getCat() }}" onclick = "deleteCat(this);"><b>Verwijder</b></button>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="w3-row">
                    <div class="w3-col s12 mycontainer-no-border">
                        <input type="text" class="w3-col w3-margin w3-border-blue s3" id="nieuwe_cat" placeholder="nieuwe categorie">
                        <select class="w3-col w3-margin w3-border-blue s3" id="nieuw_type" style="height:30px">
                            <option>enkel</option>
                            <option>dubbel</option>
                        </select>
                        <button class="newbutton" onclick = "addCat();">Voeg toe</button>
                        <div id="error_message" class="feedback_message w3-row"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="newbutton" data-dismiss="modal">Sluit</button>
            </div>
        </div>
    </div>
</div>



